{
    "compilerOptions": {
      "target": "es6",
      "module": "es2015",
      "outDir": "public/js",
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "removeComments": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true, 
      "noEmitOnError": true,
      "lib": ["es6", "dom", "es2017"]
    }
}